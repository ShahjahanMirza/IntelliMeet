# Environment Configuration
NODE_ENV=production

# Database Configuration (for production, consider using a hosted database)
DATABASE_URL=sqlite://./database.sqlite

# CORS Configuration
# For production, set this to your actual domain(s)
# Multiple origins can be separated by commas
CORS_ORIGIN=https://intellimeet.vercel.app,https://www.intellimeet.vercel.app

# Server Configuration
PORT=8001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-super-secret-jwt-key-here

# WebSocket Configuration
WS_PORT=8002

# Feature Flags
ENABLE_RECORDING=false
ENABLE_SCREEN_SHARING=true
MAX_PARTICIPANTS=10
MAX_MEETING_DURATION_MINUTES=30

# Logging
LOG_LEVEL=info

# For development only
# CORS_ORIGIN=http://localhost:3000,http://localhost:5173
# NODE_ENV=development
